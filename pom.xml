<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.qualixium</groupId>
    <artifactId>nbshell</artifactId>
    <version>1.2.3</version>
    <packaging>nbm</packaging>
    <description>
        <![CDATA[
<h2>Shell Scripts file support on NetBeans IDE</h2>
<ul>
    <li>Syntax Highlighting</li>
    <li>Simple autocompletion</li>
    <li>Run Script File</li>
</ul>
<a href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=7FUCWX98NEUAL">
  <img src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif" alt="btn_donate_SM.gif"></a>
]]>
    </description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <version>3.13</version>
                <extensions>true</extensions>
                <configuration>
                    <author>Pedro Hidalgo</author>
                    <homePageUrl>https://github.com/pedrohidalgo/nbshell.git</homePageUrl>
                    <requiresRestart>true</requiresRestart>
<!--                    <keystore>/home/pedro/qualixium/pluginDev/security/keystore</keystore>
                    <keystorealias>myself</keystorealias>
                    <keystorepassword>specialsauce</keystorepassword>-->
                    <licenseName>Apache License Version 2.0</licenseName>
                    <licenseFile>LICENSE</licenseFile>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>netbeans</id>
            <name>Repository hosting NetBeans modules</name>
            <url>http://bits.netbeans.org/nexus/content/groups/netbeans</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
